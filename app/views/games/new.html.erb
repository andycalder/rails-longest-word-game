<h1>New Page</h1>

<ul>
  <% @letters.each do |letter| %>
    <li>
      <div class="letter-box">
        <%= letter %>
      </div>
    </li>
  <% end %>
</ul>

<form action="/score">
  <input type="text" name="word">
  <input type="submit" value="Submit">
  <%= hidden_field_tag 'letters', @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
